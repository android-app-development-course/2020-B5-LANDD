<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".ui.task.TaskFragment">

    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
        android:id="@+id/activity_main_rfal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:layout_constraintStart_toStartOf="parent"
        fab:layout_constraintTop_toTopOf="parent"
        fab:rfal_frame_alpha="0.7"
        fab:rfal_frame_color="#F6F6F6">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/DownLoad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F6F6" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Finish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F6F6F6" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
            android:id="@+id/activity_main_rfab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:padding="8dp"
            fab:rfab_color_normal="#37474f"
            fab:rfab_color_pressed="#263238"
            fab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            fab:rfab_shadow_color="#999999"
            fab:rfab_shadow_dx="0dp"
            fab:rfab_shadow_dy="2dp"
            fab:rfab_shadow_radius="7dp"
            fab:rfab_size="normal" />


    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>


</androidx.constraintlayout.widget.ConstraintLayout>